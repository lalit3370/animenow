<!DOCTYPE html>
<html lang="en">

<head>
    <!-- <script src="homestyle.js"></script> -->
    <script>
        var genid ="<%=genid%>";
    </script>
    <link href="https://fonts.googleapis.com/css?family=Oxygen|Trade+Winds&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
        integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/icons/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <title>AnimeNow</title>
    <link rel="stylesheet" href="/home.css">
    <link rel="stylesheet" href="/animethumb.css">
</head>

<body>
    <div class="wrapper">
        <nav>
            <div id="homeicon">
                <a href="/">AnimeNow</a>
            </div>
            <div class="topnav">
                <a href="/">Home</a>
                <a href="/list">List</a>
                <div class="genredropdown">
                    <a class="genredropbtn active">Genre</a>
                    <div class="genredropdown-content">
                        <div>
                            <form action="/genre" method="GET">
                                <div><button type="submit" class="genreid" value="Action" name="genrebtn">Action</button>
                                </div>
                                <div><button type="submit" class="genreid" value="Adventure" name="genrebtn">Adventure</div>
                                <div><button type="submit" class="genreid" value="Comedy" name="genrebtn">Comedy</button>
                                </div>
                                <div><button type="submit" class="genreid" value="Drama" name="genrebtn">Drama</button>
                                </div>
                                <div><button type="submit" class="genreid" value="Slice of Life" name="genrebtn">Slice of
                                        Life</button></div>
                            </form>
                        </div>

                        <div>
                            <form action="/genre" method="GET">
                                <div><button type="submit" class="genreid" value="Fantasy" name="genrebtn">Fantasy</button>
                                </div>
                                <div><button type="submit" class="genreid" value="Magic" name="genrebtn">Magic</button>
                                </div>
                                <div><button type="submit" class="genreid" value="37"
                                        name="genrebtn">Supernatural</button></div>
                                <div><button type="submit" class="genreid" value="Horror" name="genrebtn">Horror</button>
                                </div>
                                <div><button type="submit" class="genreid" value="Mystery" name="genrebtn">Mystery</button>
                                </div>
                            </form>
                        </div>

                        <div>
                            <form action="/genre" method="GET">
                                <div><button type="submit" class="genreid" value="Psychological"
                                        name="genrebtn">Psychological</button></div>
                                <div><button type="submit" class="genreid" value="Romance" name="genrebtn">Romance</button>
                                </div>
                                <div><button type="submit" class="genreid" value="Sci-Fi" name="genrebtn">Sci-Fi</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <a href="#browse">Browse</a>
                <a href="/animemes">Animemes</a>
            </div>

            <div class="searcharea">
                <form action="/search" method="POST" id="searchform">
                    <input type="text" id="search" name="searchkey" placeholder="Search">
                    <button type="submit" class="bootstrapbtn white">Search</button>
                </form>
            </div>
            <% if(typeof user !='undefined'){%>
            
            <div class="acctarea">
                <a href="/home" id="acctname">Welcome, <%=user.username%></a>
                <div id="acctdropcontent">
                    <a href="/profile" class="acctlinks">Profile</a>
                    <a href="/setting" class="acctlinks">Settings</a>
                    <a href="/logout" class="acctlinks">Logout</a>
                </div>
            </div>
            <% } else {%>
            <div class="acctarea">
                <a href="/login">Login</a>
                <a href="/signup">Signup</a>
            </div>
            <% }%>
        </nav>
        <div id="mid">
            <div class="row" id="midrow">
                <div class="animethumbarea" id="newanime">

                </div>
            </div>

        </div>
        <div id="foot">
            <div>
                About Us
            </div>
            <div>
                Contact Us
            </div>
        </div>
    <script src="/genre.js"></script>
</body>

</html>